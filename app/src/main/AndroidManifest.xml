<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sabre.api.sacs.sabreapicodesamples">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WorkflowRunnerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowResultsActivity"
            android:label="@string/title_activity_show_results" />

        <service
            android:name="com.sabre.api.des.developeressentials.LowFareService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".BookActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_book"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>